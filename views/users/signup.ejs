<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <!-- for username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>

                <!-- for validation -->
                <div class="valid-feedback">Username looks Good!</div>
                <div class="invalid-feedback">Please enter Username!!</div>
            </div>

            <!-- for email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>

                <!-- for validation -->
                <div class="valid-feedback">Email looks Good!</div>
                <div class="invalid-feedback">Please enter Email!!</div>
            </div>

            <!-- for password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>

                <!-- for validation -->
                <div class="valid-feedback">Password looks Good!</div>
                <div class="invalid-feedback">Please enter Password!!</div>
            </div>
            
            <button class="btn btn-success">Signup</button>
        </form>
    </div>        
</div>