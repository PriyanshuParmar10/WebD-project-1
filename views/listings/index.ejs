<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div id="filters">
        <a href="/listings/category/Rooms" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        </a>
    <a href="/listings/category/Iconic Cities" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-building"></i>
            <p>Iconic Cities</p>
        </div>
        </a>
        <a href="/listings/category/Mountains" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Mountains</p>
        </div>
        </a>
        <a href="/listings/category/Castles" class="category-link">
        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>
        </a> 
        <a href="/listings/category/Amazing Pools"  class="category-link">
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>
        </a>
        <a href="/listings/category/Camping" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-tent"></i>
            <p>Camping</p>
        </div>
        </a>
        <a href="/listings/category/Farms" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>
        </a>
        <a href="/listings/category/Arctic" class="category-link">
        <div class="filter">
            <i class="fa-regular fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        </a>
        <a href="/listings/category/Games" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-football">/ </i>
            <i class="fa-solid fa-gamepad"></i>
            <p>Games</p>
        </div>
        </a>
        <a href="/listings/category/Beach Front" class="category-link">
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach Front</p>
        </div>
        </a>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked>
                <label class="form-check-label" for="flexSwitchCheckDefault">Prices Before Taxes</label>
              </div>
        </div>
    </div>
    
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_images" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            <b><%= listing.title %></b>
                            <br> &#8377; <span class="price" data-price="<%= listing.price %>"><%= listing.price.toLocaleString("en-IN") %></span>/night
                            <i class="tax-info"> &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
    
    
</body>

<script src="/js/taxSwitch.js"></script>
