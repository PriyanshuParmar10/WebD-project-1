<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
         <div class="col-8 offset-2">
            <form method="POST" action="/listings/<%= detail._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <h3>Edit Your Details</h3>
                <br>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= detail.title %>" placeholder="Enter Your Title" class="form-control" required>

                    <!-- for validation -->
                    <div class="valid-feedback">Title looks good!!</div>
                    <div class="invalid-feedback">Title is missing!!</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= detail.description %></textarea>

                    <!-- for validation -->
                    <div class="valid-feedback">Description is ok!</div>
                    <div class="invalid-feedback">Please enter description!!</div>
                </div>

                <div class="mb-3">
                    Original Listing Image: <br>
                  <img src="<%= originalImageUrl %>" alt="listing image" class="edit-image">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" name="listing[image]" placeholder="Enter Your Image" class="form-control">

                    <!-- for validation -->
                    <div class="invalid-feedback">Image is Required!!</div>
                </div>    

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" value="<%= detail.price %>" placeholder="Enter Your Price" class="form-control" required>

                    <!-- for validation -->
                    <div class="invalid-feedback">Please enter price!!</div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-select" required>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Games">Games</option>
                        <option value="Beach Front">Beach Front</option>
                    </select>

                    <!-- for Validation -->
                    <div class="invalid-feedback">Please select a category!!</div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Select Category</label>
                    <select name="listing[category]" id="category" class="form-control form-select" required>
                        <option value="<%= detail.category %>" selected><%= detail.category %></option>
                        <option value="Rooms">Rooms</option>
                        <option value="Beach Front">Beach Front</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountain Cities">Mountain Cities</option>
                        <option value="Castles">Castles</option> 
                        <option value="Amazing Pools">Amazing Pools</option> 
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option> 
                        <option value="Games">Games</option>
                    </select>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= detail.location %>" placeholder="Enter Your Location" class="form-control" required>
                        
                        <!-- for validation -->
                        <div class="invalid-feedback">Invalid location!!</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%= detail.country %>" placeholder="Enter Your Country" class="form-control" required>

                       <!-- for validation -->
                        <div class="invalid-feedback">Invalid country name!!</div>
                    </div>
                </div>

                <button class="btn btn-dark edit-btn mt-3">EDIT</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
</html>